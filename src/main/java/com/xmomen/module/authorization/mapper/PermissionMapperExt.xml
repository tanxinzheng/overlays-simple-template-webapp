<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xmomen.module.authorization.mapper.PermissionMapperExt" >

    <!--    查询消息    -->
    <select id="getPermissionModel"
            resultType="com.xmomen.module.authorization.model.PermissionModel"
            parameterType="com.xmomen.module.authorization.model.PermissionQuery">
        SELECT t.* FROM xmo_permission t
        LEFT JOIN xmo_group_permission gp
        ON gp.PERMISSION_ID=t.ID
        <where>
            <if test="keyword">
                    AND (t.PERMISSION_CODE LIKE CONCAT('%', #{keyword}, '%')
                    OR t.PERMISSION_NAME LIKE CONCAT('%', #{keyword}, '%')
                    OR t.DESCRIPTION LIKE CONCAT('%', #{keyword}, '%'))
            </if>
            <if test="id">
                AND t.ID = #{id}
            </if>
            <if test="ids">
                AND t.ID IN
                <foreach collection="ids" item="item" separator="," open="(" close=")">
                #{item}
                </foreach>
            </if>
            <if test="excludeIds">
                AND t.ID NOT IN
                <foreach collection="excludeIds" item="item" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
            <if test="groupId and hasPermission">
                AND gp.GROUP_ID = #{groupId}
            </if>
            <if test="groupId and !hasPermission">
                AND t.ID NOT IN
                (SELECT
                p.ID AS permission_id
                FROM
                  xmo_permission p
                LEFT JOIN xmo_group_permission gp
                  ON p.ID = gp.PERMISSION_ID
                  WHERE gp.GROUP_ID = #{groupId})
            </if>
          </where>
          ORDER BY t.id
    </select>

</mapper>