<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xmomen.module.authorization.mapper.UserPermissionMapperExt" >

    <!--    查询消息    -->
    <select id="getUserPermissionModel"
            resultType="com.xmomen.module.authorization.model.UserPermissionModel"
            parameterType="com.xmomen.module.authorization.model.UserPermissionQuery">
        SELECT * FROM xmo_user_permission t
        <where>
            <if test="id">
                AND t.ID = #{id}
            </if>
            <if test="ids">
                AND t.ID IN
                <foreach collection="ids" item="item" separator="," open="(" close=")">
                #{item}
                </foreach>
            </if>
            <if test="userId">
                AND t.USER_ID = #{userId}
            </if>
            <if test="permissionIds">
                AND t.PERMISSION_ID IN
                <foreach collection="permissionIds" item="item" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
            <if test="excludeIds">
                AND t.ID NOT IN
                <foreach collection="excludeIds" item="item" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
          </where>
          ORDER BY t.id
    </select>

</mapper>