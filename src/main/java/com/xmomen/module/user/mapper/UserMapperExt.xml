<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xmomen.module.user.mapper.UserMapperExt" >

    <!--    查询消息    -->
    <select id="getUserModel"
            resultType="com.xmomen.module.user.model.UserModel"
            parameterType="com.xmomen.module.user.model.UserQuery">
        SELECT * FROM xmo_user t
        <where>
            <if test="keyword">
                AND t.ID LIKE CONCAT('%', #{keyword}, '%')
            </if>
            <if test="id">
                AND t.ID = #{id}
            </if>
            <if test="ids">
                AND t.ID IN
                <foreach collection="ids" item="item" separator="," open="(" close=")">
                #{item}
                </foreach>
            </if>
            <if test="excludeIds">
                AND t.ID NOT IN
                <foreach collection="excludeIds" item="item" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
          </where>
          ORDER BY t.id
    </select>

</mapper>