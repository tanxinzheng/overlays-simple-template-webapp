<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xmomen.framework.generator.mapper.GenerateMapperExt" >

    <!--    查询消息    -->
    <select id="getTableDefineModel"
            resultType="com.xmomen.framework.generator.model.TableDefine"
            parameterType="java.util.HashMap">
        show table status
        <where>
            <if test="tableNames">
                AND name IN
                <foreach collection="tableNames" item="item" separator="," open="(" close=")">
                #{item}
                </foreach>
            </if>
          </where>
    </select>

</mapper>